{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@configuration": ["src/configuration"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@public/*": ["public/*"],
      "@public": ["public"],
      "@components/icons/*": ["src/components/icons/*"],
      "@components/icons": ["src/components/icons"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"],
      "@redux/*": ["src/redux/*"],
      "@redux": ["src/redux"],
      "@routes/*": ["src/routes/*"],
      "@i18n": ["./i18n"],
      "@test/*": ["test/*"],
      "@test": ["test"],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": ["src/layouts"],
      "@utils/*": ["src/utils/*"],
      "@generated/*": ["src/generated/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "test/*", "cypress/*"]
}
